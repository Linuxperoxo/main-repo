# AUTHOR: Linuxperoxo
# MAINTAINER: Linuxperoxo
# Depends on: autoconf automake autotools ncurses
# Optional: sensors hwloc libcap libnl-3 libnl-genl-3
# Desc: System monitoring tool for Unix-based systems like Linux

name="htop"
version="3.3.0"
extension="tar.gz"
use_tools="Y"
source_url="https://github.com/htop-dev/htop/archive/refs/tags/3.3.0.tar.gz"

pre_build()
{
	cd $name-$version
}

build()
{
	./autogen.sh
	./configure --prefix=/usr
	make
}

install()
{
	make DESTDIR=$FAKEROOT/$name install
}
